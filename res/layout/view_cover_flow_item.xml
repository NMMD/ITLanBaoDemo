<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_img_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
  >

        <com.itlanbao.demo.fancy.RoundedImageView
            android:id="@+id/item_img"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:id="@+id/voice_play_view"
            android:layout_width="@dimen/play_voice_btn_size"
            android:layout_height="@dimen/play_voice_btn_size"
            android:layout_centerInParent="true"
            android:background="@drawable/play_voice_bg" >

            <TextView
                android:id="@+id/voice_play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/play_voice_img_4"
                android:gravity="center"
                android:text="10s"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/select_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/regist_dialog_title_high"
            android:layout_alignParentBottom="true"
            android:background="@drawable/play_voice_bottom_btn"
            android:gravity="center"
            android:text="喜欢4号"
            android:textColor="@color/white"
            android:textSize="16sp" >
        </TextView>
    </RelativeLayout>

</LinearLayout>